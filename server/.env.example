# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/cryptalyst

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/oauth/google/callback

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:5000/api/oauth/github/callback

# Crypto API (CoinGecko, CoinMarketCap, etc.)
CRYPTO_API_KEY=your_crypto_api_key_here
CRYPTO_API_BASE_URL=https://api.coingecko.com/api/v3

# News API (Marketaux.com)
# Get your API key from https://www.marketaux.com/
# Free tier: 100 requests/month
MARKETAUX_API_KEY=your_marketaux_api_key_here

# Client/Frontend URL
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
