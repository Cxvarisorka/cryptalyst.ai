# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/cryptalyst

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/oauth/google/callback

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:5000/api/oauth/github/callback

# Crypto API (CoinGecko, CoinMarketCap, etc.)
CRYPTO_API_KEY=your_crypto_api_key_here
CRYPTO_API_BASE_URL=https://api.coingecko.com/api/v3

# News API (Marketaux.com)
# Get your API key from https://www.marketaux.com/
# Free tier: 100 requests/month
MARKETAUX_API_KEY=your_marketaux_api_key_here

# Client/Frontend URL
CLIENT_URL=http://localhost:3000

# Cloudinary (for post image uploads)
# Get your credentials from https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe (for subscription payments)
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# Create price IDs in Stripe Dashboard (Products -> Add Product -> Recurring)
# Basic Plan: $10/month with 3-day trial
STRIPE_BASIC_PRICE_ID=price_your_basic_plan_id
# Premium Plan: $25/month with 3-day trial
STRIPE_PREMIUM_PRICE_ID=price_premium_plan_id
